<datawatcher>
	<table-mapping identifier="mydatawatchercron" table-name="datawatcher">
		<check-change cron-expression="0/45 * * * * *"/>
		<jdbc-connection>
			<driverclass-name>com.mysql.jdbc.Driver</driverclass-name>
			<url>jdbc:mysql://localhost/datawatcher</url>
			<username>root</username>
			<password>jean</password>
		</jdbc-connection>
		<id column-type="java.lang.Integer" column-name="id"/>
		<columns>
			<column column-type="java.lang.String" column-name="nome"/>
		</columns>
		<listeners>
			<listener class-name="ListenerImplTest" asynchronous="true"/>
		</listeners>
	</table-mapping>
</datawatcher>