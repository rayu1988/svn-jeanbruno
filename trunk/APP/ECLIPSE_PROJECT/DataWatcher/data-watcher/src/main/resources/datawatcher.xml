<datawatcher>
	<table-mapping table-name="datawatcher">
		<check-change cron-expression="* 1-1 0 *"/>
		<jdbc-connection>
			<driverclass-name>com.mysql.jdbc.Driver</driverclass-name>
			<url>jdbc:mysql://localhost/datawatcher</url>
			<username>root</username>
			<password>jean</password>
		</jdbc-connection>
		<id column-type="java.lang.Integer" column-name="id"/>
		<columns>
			<column column-type="java.lang.String" column-name="nome"/>
		</columns>
		<listeners>
			<listener class-name="br.com.database.MyClass1" asynchronous="true"/>
			<listener class-name="br.com.database.MyClass2" asynchronous="false"/>
			<listener class-name="br.com.database.MyClass3" asynchronous="true"/>
		</listeners>
	</table-mapping>
</datawatcher>